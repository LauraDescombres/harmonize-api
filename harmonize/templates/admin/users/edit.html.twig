{% extends "admin/base.html.twig" %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}

<h2 class="texte-center my-4">{{ 'Modification de l\'utilisteur : ' ~ user.username }}</h2>

{{ form_start(form) }}
    {{ form_row(form.username) }}
    {{ form_row(form.password)}}
    {{ form_row(form.email) }}
    {{ form_row(form.description) }}
    {{ form_row(form.picture) }}    
    {{ form_row(form.profil) }}
    {{ form_row(form.status) }}
    <div class="mt-2">
        <a href="{{ path('users_browse') }}" class="btn btn-info">Annuler</a>
        <button class="btn btn-success">Modifier</button>
    </div>
{{ form_end(form) }}

{% endblock %}